<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/picbackground">

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="267dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/acc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="帳號"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edId"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_alignBaseline="@+id/acc"
            android:layout_alignParentEnd="true"
            android:background="@drawable/txtinput_border"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/acc"
            android:layout_marginTop="20dp"
            android:text="密碼"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edPsw"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/edId"
            android:background="@drawable/txtinput_border"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/acc"
            android:layout_marginTop="20dp"
            android:text="再次輸入密碼"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edRePsw"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_alignBaseline="@+id/name"
            android:background="@drawable/txtinput_border"
            android:layout_toEndOf="@+id/btnSubmit"
            android:ems="10"
            android:inputType="textPassword" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnCancel"
        android:layout_marginEnd="65dp"
        android:background="@drawable/btn_selector"
        android:text="確定"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="76dp"
        android:layout_marginStart="65dp"
        android:background="@drawable/btn_selector"
        android:text="取消"
        android:textColor="#FFFFFF" />
</RelativeLayout>
